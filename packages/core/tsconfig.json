{
  "compilerOptions": {
    "outDir": "lib",
    "sourceRoot": "src",
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": false,
    "declaration": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "reflect-metadata",
      "node"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "packages/core/src"
  ],
  "exclude": [
    "__tests__",
    "dist",
    "demo",
    "jest",
    "**/*.test.ts",
    "node_modules",
    "**/*.spec.ts",
    "index.js",
    "main.js",
    "router.js"
  ]
}